@model Tuple<ConsumerModel, AzureStorageConfig>
@{
    ViewData["Title"] = "Create";
}


<!--This is the button to upload images-->
<form asp-action="/api/images/upload" enctype="multipart/form-data">
    <main>
        <div class="box content">
            <div>
                <form action="/api/images/upload"
                      class="dropzone needsclick dz-clickable"
                      id="image-upload"
                      method="post"
                      enctype="multipart/form">
                    <div class="dz-message needsclick">
                        <span class="note needsclick">
                            <input asp-for="Item1.Picture" name="Picture" class="form-control" accept="image/*">
                        </span>
                    </div>
                </form>
            </div>
        </div>
    </main>
</form>
            script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.1.1/min/dropzone.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/blueimp-gallery/2.25.2/js/blueimp-gallery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js"></script>
<script>
    // Grab links for images from backend api
    function fetchImageLinks() {
        // Fetch images
        $.get(function (fetchedImageLinks) {
            console.log(fetchedImageLinks)
        });
    }
    // Start first interval
    fetchImageLinks()
    /* Dropzone */
    // "imageUpload" is the camelized version of the HTML element's ID
    Dropzone.options.imageUpload = {
        paramName: "files", // The name that will be used to transfer the file
        dictDefaultMessage: "Drop files here or Click to Upload",
        init: function () {
            myDropzone = this;
            myDropzone.on("success", function (file, response) {
                console.log("Success");
            });
        }
    };
</script>
